<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/defaultActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open default activity"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/translucentActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open translucent activity"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/viewPagerInNewModeActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open ViewPager activity (new mode)"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/viewPagerInLegacyModeActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open ViewPager activity (legacy mode)"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/viewPager2ActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open ViewPager2 activity"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/wrongFragmentReplaceActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open wrong Fragment replace activity"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/viewModelActivityButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open ViewModel activity"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/replaceFragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replace fragment"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/dialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open dialog"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/dialogFragmentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open dialog fragment"
            tools:ignore="HardcodedText" />

        <FrameLayout
            android:background="#ebebeb"
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>
</ScrollView>
